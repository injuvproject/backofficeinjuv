#page
	h1.page-heading
		display block
		margin-top 0
		font-size 28px
		line-height 32px
		font-weight 300
		padding-bottom 16px
		margin-bottom 16px
		position relative
		
		&:after
			content ""
			position absolute
			bottom 0
			left 0
			width 180px
			height 1px
			background #ccc
			
	.btn .fa
		color #fff
		
	.table-responsive
		margin-bottom 30px
		max-width 800px
		
		.form-inline
			display inline-block
			margin-left 6px
			
	input[type="file"]
		line-height 0
		margin-top 8px
		
	.checkbox.disabled, .radio.disabled
		label
			color #999
		
@media screen and (max-width 767px)
	caption
		text-align center
		padding 8px 12px
		border-bottom 1px solid #ddd
		
		.form-inline
			margin-left 0 !important